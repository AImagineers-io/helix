# Helix Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE (PostgreSQL on db01)
# =============================================================================
DATABASE_URL=postgresql://helix_user:your_password@192.168.30.xxx:5432/helix_db

# =============================================================================
# REDIS (Local container)
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# OpenAI (Primary)
OPENAI_API_KEY=sk-...

# Anthropic (Fallback)
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# GOOGLE TRANSLATE
# =============================================================================
GOOGLE_TRANSLATE_API_KEY=...

# =============================================================================
# FACEBOOK MESSENGER
# =============================================================================
FB_PAGE_ACCESS_TOKEN=...
FB_VERIFY_TOKEN=your_verify_token
FB_APP_SECRET=...

# =============================================================================
# SECURITY
# =============================================================================
# API key for admin endpoints
API_KEY=your_secure_api_key

# Secret key for signing tokens
SECRET_KEY=your_secret_key_here

# =============================================================================
# FRONTEND BUILD ARGS
# =============================================================================
VITE_API_URL=https://helix-api.aimagineers.io
VITE_API_KEY=your_frontend_api_key
VITE_APP_NAME=Helix

# =============================================================================
# APPLICATION
# =============================================================================
# Debug mode (set to false in production)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# CORS origins (comma-separated)
CORS_ORIGINS=https://helix.aimagineers.io,http://localhost:3000

# =============================================================================
# BRANDING (White-label)
# =============================================================================
# Application name displayed in UI and API documentation
APP_NAME=Helix

# Short description for API documentation
APP_DESCRIPTION=AI-powered Q&A chatbot

# Name used by the chatbot when responding to users
BOT_NAME=Helix Assistant

# URL to logo image (optional, leave empty for no logo)
LOGO_URL=

# Primary brand color in hex format
PRIMARY_COLOR=#3B82F6

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable variety-specific chat processing
ENABLE_VARIETY_PROCESSOR=true

# Enable Facebook Messenger integration
ENABLE_MESSENGER=true

# Enable analytics and observability features
ENABLE_ANALYTICS=true
